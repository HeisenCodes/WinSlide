<Window x:Class="WinSlide.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinSlide.Views"
        xmlns:c="clr-namespace:WinSlide.Converters"
        
        mc:Ignorable="d"
        Title="WinSlide" Height="405" Width="500" 
        ResizeMode="NoResize"
        Icon="/Icons/icon.ico">

    <Window.Resources>
        <c:EnumToBoolConverter x:Key="enumToBooleanConverter"/>
    </Window.Resources>

    <Grid Margin="10" VerticalAlignment="Center">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="How to Use:">
            <TextBlock Margin="10">
                • Add multiple desktop enviornments.<LineBreak/>
                • Move your cursor to the <Bold>bottom edge</Bold> of your screen.<LineBreak/>
                • Scroll up or down using your mouse.<LineBreak/>
                • The software will switch to the <Bold>next virtual desktop</Bold> in the direction you scroll.
            </TextBlock>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Scroll Senstivity:" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <RadioButton Grid.Column="0" Content="Low" Margin="20,10,10,10"
                             IsChecked="{Binding Path=ScrollSensitivity, Converter={StaticResource enumToBooleanConverter}, ConverterParameter=Low}"/>
                <RadioButton Grid.Column="1" Content="Medium" Margin="20,10,10,10"
                             IsChecked="{Binding Path=ScrollSensitivity, Converter={StaticResource enumToBooleanConverter}, ConverterParameter=Medium}"/>
                <RadioButton Grid.Column="2" Content="High" Margin="20,10,10,10"
                             IsChecked="{Binding Path=ScrollSensitivity, Converter={StaticResource enumToBooleanConverter}, ConverterParameter=High}"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Edge Threshold:" Margin="0,20,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Pixels"/>

                <Slider Grid.Column ="1" Value="{Binding EdgeThreshold}" Minimum="1" Maximum="50" Margin="30,0"/>

                <TextBlock Grid.Column="2" Text="{Binding EdgeThreshold}" HorizontalAlignment="Center" Margin="0,0,20,0"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="Startup:" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Column="0" Margin="20,10,10,10" IsChecked="{Binding StartOnStartup}"/>
                <TextBlock Grid.Column="1" Margin="20,10,10,10" Text="Launch WinSlide on system start."/>

            </Grid>
        </GroupBox>
        
    </Grid>

</Window>
